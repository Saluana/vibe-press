{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // sets root
    "paths": {
      "@/*": ["./*"],
      "@vp/packages/*": ["packages/*"],
      "@vp/server/*": ["apps/api/src/api/*"],
      "@vp/core/*": ["apps/api/src/core/*"],
      "@vp/db/*": ["apps/api/src/core/db/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ]
}